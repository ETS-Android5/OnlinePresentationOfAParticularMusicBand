<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tan_background"
    android:orientation="vertical"
    tools:context="com.example.android.sensilence.MainActivity">
    <!-- відчуття.тиші category -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/category_sense_of_silence">

        <TextView
            android:id="@+id/sense_of_silence"
            style="@style/CategoryStyle"
            android:layout_gravity="center_vertical"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:text="@string/category_sense_of_silence"
            android:textColor="@android:color/black"
            tools:ignore="ObsoleteLayoutParam" />
    </FrameLayout>

    <!-- Злочин category -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/category_crime">

        <TextView
            android:id="@+id/crime"
            style="@style/CategoryStyle"
            android:layout_gravity="center_vertical"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:text="@string/category_crime"
            tools:ignore="ObsoleteLayoutParam" />
    </FrameLayout>
    <!-- Zombi category -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/category_zombi">

        <TextView
            android:id="@+id/zombi"
            style="@style/CategoryStyle"
            android:layout_gravity="center_vertical"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:text="@string/category_zombi"
            tools:ignore="ObsoleteLayoutParam" />
    </FrameLayout>

    <!-- Zigmund Afraid category -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/category_zigmund_afraid">

        <TextView
            android:id="@+id/zigmund_afraid"
            style="@style/CategoryStyle"
            android:layout_gravity="center_vertical"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:text="@string/category_zigmund_afraid"
            tools:ignore="ObsoleteLayoutParam" />
    </FrameLayout>
</LinearLayout>