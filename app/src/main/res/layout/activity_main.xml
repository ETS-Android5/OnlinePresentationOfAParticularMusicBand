<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tan_background"
    android:orientation="vertical"
    tools:context="com.example.android.sensilence.MainActivity">
    <!-- відчуття.тиші category -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/category_sense_of_silence">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="250dp"
            android:scaleType="fitXY"
            android:alpha="0.3"
            android:src="@drawable/white_and_black"
            android:contentDescription="@string/background" />

        <TextView
            android:id="@+id/sense_of_silence"
            style="@style/CategoryStyle"
            android:layout_gravity="center_vertical"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:text="@string/category_sense_of_silence"
            android:textSize="32sp"
            android:textColor="@android:color/black"
            tools:ignore="ObsoleteLayoutParam" />
    </FrameLayout>

    <!-- Злочин category -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/category_crime">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="250dp"
            android:scaleType="fitXY"
            android:alpha="0.45"
            android:src="@drawable/crime"
            android:contentDescription="@string/background" />

        <TextView
            android:id="@+id/crime"
            style="@style/CategoryStyle"
            android:layout_gravity="center_vertical"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:text="@string/category_crime"
            android:textSize="32sp"
            tools:ignore="ObsoleteLayoutParam" />
    </FrameLayout>
    <!-- Zombi category -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/category_sense_of_silence">
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="250dp"
            android:scaleType="fitXY"
            android:alpha="0.5"
            android:src="@drawable/zombi_cover"
            android:contentDescription="@string/background" />

        <TextView
            android:id="@+id/zombi"
            style="@style/CategoryStyle"
            android:layout_gravity="center_vertical"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:text="@string/category_zombi"
            android:textColor="@android:color/black"
            android:textSize="32sp"
            tools:ignore="ObsoleteLayoutParam" />
    </FrameLayout>

    <!-- Zigmund Afraid category -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/category_zigmund_afraid">
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="250dp"
            android:alpha="0.3"
            android:scaleType="centerCrop"
            android:src="@drawable/zigmund_afraid_cover"
            android:contentDescription="@string/background" />

        <TextView
            android:id="@+id/zigmund_afraid"
            style="@style/CategoryStyle"
            android:layout_gravity="center_vertical"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:text="@string/category_zigmund_afraid"
            android:textSize="32sp"
            tools:ignore="ObsoleteLayoutParam" />
    </FrameLayout>
</LinearLayout>