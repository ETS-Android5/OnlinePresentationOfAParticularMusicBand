<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tan_background"
    android:orientation="vertical"
    tools:context="com.example.android.sensilence.MainActivity">

    <TextView
        android:id="@+id/sense_of_silence"
        style="@style/CategoryStyle"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/category_sense_of_silence"
        android:gravity="center"
        android:text="@string/category_sense_of_silence"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/crime"
        style="@style/CategoryStyle"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/category_crime"
        android:gravity="center"
        android:text="@string/category_crime" />

    <TextView
        android:id="@+id/zombi"
        style="@style/CategoryStyle"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/category_zombi"
        android:gravity="center"
        android:text="@string/category_zombi" />

    <TextView
        android:id="@+id/zigmund_afraid"
        style="@style/CategoryStyle"
        android:layout_height="0dp"
        android:layout_weight="1" android:background="@color/category_zigmund_afraid"
        android:gravity="center"
        android:text="@string/category_zigmund_afraid" />

</LinearLayout>