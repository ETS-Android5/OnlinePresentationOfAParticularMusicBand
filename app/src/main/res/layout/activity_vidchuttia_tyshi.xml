<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tan_background"
    android:orientation="vertical"
    tools:context="com.music.android.sensilence.MainActivity">
    <!-- відчуття.тиші category -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/category_sense_of_silence">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="250dp"
            android:alpha="0.7"
            android:contentDescription="@string/background"
            android:scaleType="fitXY"
            android:src="@drawable/white_and_black" />

        <TextView
            android:id="@+id/sense_of_silence"
            style="@style/CategoryStyle"
            android:layout_gravity="center_vertical"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:shadowColor="@android:color/white"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"
            android:text="@string/category_sense_of_silence"
            android:textColor="@android:color/black"
            android:textSize="32sp"
            tools:ignore="ObsoleteLayoutParam" />
    </FrameLayout>

    <!-- Злочин category -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/category_crime">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="250dp"
            android:alpha="0.8"
            android:contentDescription="@string/background"
            android:scaleType="fitXY"
            android:src="@drawable/crime" />

        <TextView
            android:id="@+id/crime"
            style="@style/CategoryStyle"
            android:layout_gravity="center_vertical"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:shadowColor="@android:color/black"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"
            android:text="@string/category_crime"
            android:textSize="32sp"
            tools:ignore="ObsoleteLayoutParam" />
    </FrameLayout>
    <!-- Zombi category -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/category_sense_of_silence">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="250dp"
            android:alpha="0.8"
            android:contentDescription="@string/background"
            android:scaleType="fitXY"
            android:src="@drawable/zombi_cover" />

        <TextView
            android:id="@+id/zombi"
            style="@style/CategoryStyle"
            android:layout_gravity="center_vertical"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:shadowColor="@android:color/white"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"
            android:text="@string/category_zombi"
            android:textColor="@android:color/black"
            android:textSize="32sp"
            tools:ignore="ObsoleteLayoutParam" />
    </FrameLayout>
</LinearLayout>