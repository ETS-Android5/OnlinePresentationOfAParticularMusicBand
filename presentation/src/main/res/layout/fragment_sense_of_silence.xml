<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tan_background"
    android:orientation="vertical"
    tools:context="com.music.android.sensilence.MainActivity">
    <!-- "sense.of.silence" album -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/color_sense_of_silence">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="@dimen/height_album_background"
            android:alpha="@dimen/alpha_0_7"
            android:contentDescription="@string/content_description_background"
            android:scaleType="fitXY"
            android:src="@drawable/white_and_black" />

        <TextView
            android:id="@+id/title_sense_of_silence"
            style="@style/AlbumStyle"
            android:layout_gravity="center_vertical"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:shadowColor="@android:color/white"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"
            android:text="@string/album_sense_of_silence"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size_album_name"/>
    </FrameLayout>

    <!-- "Crime" album -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/album_crime_color">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="@dimen/height_album_background"
            android:alpha="@dimen/alpha_0_8"
            android:contentDescription="@string/content_description_background"
            android:scaleType="fitXY"
            android:src="@drawable/pic_crime_cover" />

        <TextView
            android:id="@+id/title_crime"
            style="@style/AlbumStyle"
            android:layout_gravity="center_vertical"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:shadowColor="@android:color/black"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"
            android:text="@string/album_crime"
            android:textSize="@dimen/text_size_album_name"
            tools:ignore="ObsoleteLayoutParam" />
    </FrameLayout>
    <!-- Zombi album -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/color_sense_of_silence">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="@dimen/height_album_background"
            android:alpha="@dimen/alpha_0_8"
            android:contentDescription="@string/content_description_background"
            android:scaleType="fitXY"
            android:src="@drawable/zombi_cover" />

        <TextView
            android:id="@+id/tv_zombi"
            style="@style/AlbumStyle"
            android:layout_gravity="center_vertical"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:shadowColor="@android:color/white"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"
            android:text="@string/album_zombi"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size_album_name" />
    </FrameLayout>
</LinearLayout>